{% extends 'base.html.twig' %}

{% block title %}ReflexologieCôtière | Availability Slot{% endblock %}

{% block body %}
    <div class="admin-crud-header">
        <a href="{{ path('admin_dashboard') }}" class="dashboard-back-btn">← Retour au tableau de bord</a>
    </div>

    <h1>AvailabilitySlots</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ availability_slot.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ availability_slot.date ? availability_slot.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Start_time</th>
                <td>{{ availability_slot.startTime ? availability_slot.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_time</th>
                <td>{{ availability_slot.endTime ? availability_slot.endTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_booked</th>
                <td>{{ availability_slot.isBooked ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ availability_slot.createdAt ? availability_slot.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_availability_slots_crud_index') }}">back to list</a>

    <a href="{{ path('app_availability_slots_crud_edit', {'id': availability_slot.id}) }}">edit</a>

    {{ include('availability_slots_crud/_delete_form.html.twig') }}
{% endblock %}
