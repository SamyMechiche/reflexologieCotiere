{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <h1>Appointment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Appointment_date</th>
                <td>{{ appointment.appointmentDate ? appointment.appointmentDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ appointment.notes }}</td>
            </tr>
            <tr>
                <th>Health_informations</th>
                <td>{{ appointment.healthInformations }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ appointment.createdAt ? appointment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_appointment_crud_index') }}">back to list</a>

    <a href="{{ path('app_appointment_crud_edit', {'id': appointment.id}) }}">edit</a>

    {{ include('appointment_crud/_delete_form.html.twig') }}
{% endblock %}
