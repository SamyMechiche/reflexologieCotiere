{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="admin-crud-header">
        <a href="{{ path('admin_dashboard') }}" class="dashboard-back-btn">← Retour au tableau de bord</a>
    </div>
<div style="max-width: 1100px; margin: 2rem auto;">
    <h1 style="color: #47301E; text-align: center; margin-bottom: 2rem;">Liste des utilisateurs</h1>
    <table class="crud-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>PhoneNumber</th>
                <th>Créé le</th>
                <th>Vérifié</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}">Voir</a>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" style="text-align:center;">Aucun utilisateur trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="text-align: right;">
        <a href="{{ path('app_user_crud_new') }}" class="btn" style="background: #618578; color: #fff; border-radius: 7px; padding: 0.6rem 1.2rem; text-decoration: none;">Créer un nouvel utilisateur</a>
    </div>
</div>
{% endblock %}
