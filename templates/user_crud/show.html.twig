{% extends 'base.html.twig' %}

{% block title %}ReflexologieCôtière | User{% endblock %}

{% block body %}
    <div class="admin-crud-header">
        <a href="{{ path('admin_dashboard') }}" class="dashboard-back-btn">← Retour au tableau de bord</a>
    </div>

    <h1 class="user-crud-header">Détail de l'utilisateur</h1>

    <table class="user-crud-details">
        <tbody>
            <tr>
                <th>Id</th>
                <td data-label="Id">{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td data-label="Email">{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td data-label="Roles">{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td data-label="Password">{{ user.password }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td data-label="FirstName">{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td data-label="LastName">{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td data-label="PhoneNumber">{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td data-label="CreatedAt">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td data-label="IsVerified">{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="user-crud-actions">
        <a href="{{ path('app_user_crud_index') }}">Retour à la liste</a>
        <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}">Éditer</a>
        {{ include('user_crud/_delete_form.html.twig') }}
    </div>
{% endblock %}
